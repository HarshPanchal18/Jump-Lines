<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.example.JumpingLines</id>

    <name>Jumping Lines</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://github.com/HarshPanchal18/Jump-K-Lines">Jump K Lines</vendor>

    <description>
        This is the plugin for jumping multiple lines to navigate the cursor vertically over the editor in lesser time
        rather than hamming up/down arrow keys.
        <![CDATA[
            </br>
            <a href="https://github.com/HarshPanchal18/">Developer Contact</a>
        ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!--<applicationConfigurable
                displayName="Jump K Lines"
                id="com.example.jumpinglines"
                instance="com.example.jumpinglines.JumpLinesSettings"
                dynamic="true"/>-->
    </extensions>

    <actions>
        <action id="com.example.jumpinglines.JumpForwardLines" class="com.example.jumpinglines.JumpForwardLines"
                text="Forward">
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl COMMA"/>
        </action>
        <action id="com.example.jumpinglines.JumpBackwardLines" class="com.example.jumpinglines.JumpBackwardLines"
                text="Backward">
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl K"/>
        </action>
    </actions>

</idea-plugin>